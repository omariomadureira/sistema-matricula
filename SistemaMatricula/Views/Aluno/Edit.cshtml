@model SistemaMatricula.Models.Aluno
@{ViewBag.Title = "Cadastro de Alunos";}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h6>
    </div>
    <div class="card-body">
        @{
            if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Message
                </div>

                if (ViewBag.HideScreen)
                {
                    <div class="text-center">
                        <a class="btn btn-primary btn-sm" href="@Url.Action("Index", "Aluno")">VOLTAR</a>
                    </div>
                }
            }

            if (!ViewBag.HideScreen)
            {
                <div class="row">
                    <div class="col-lg-12">
                        <form class="user" method="post" href="@Url.Action("Edit", "Aluno", new { Id = ViewBag.Aluno.IdAluno })">
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <input type="text" class="form-control form-control-user" required name="nome" placeholder="Nome" value="@ViewBag.Aluno.Nome">
                                </div>
                                <div class="col-md-6">
                                    @{
                                        if (DateTime.Equals(ViewBag.Aluno.DataNascimento.Date, new DateTime().Date))
                                        {
                                            <input type="date" class="form-control form-control-user" required name="nascimento" placeholder="Data de Nascimento" />
                                        }
                                        else
                                        {
                                            <input type="date" class="form-control form-control-user" required name="nascimento" placeholder="Data de Nascimento" value="@ViewBag.Aluno.DataNascimento.ToString("yyyy-MM-dd")" />
                                        }
                                    }
                                </div>
                            </div>
                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-primary btn-success btn-sm"><i class="fas fa-save"></i> SALVAR</button>
                                <a class="btn btn-danger btn-sm" href="@Url.Action("Index", "Aluno")">CANCELAR</a>
                            </div>
                        </form>
                    </div>
                </div>
            }
        }
    </div>
</div>