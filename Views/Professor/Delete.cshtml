@model SistemaMatricula.Models.Professor
@{ViewBag.Title = "Cadastro de Professores";}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h6>
    </div>
    <div class="card-body">
        @{
            if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Message
                </div>
                <div class="text-center">
                    <a class="btn btn-primary btn-sm" href="@Url.Action("Index", "Professor")">VOLTAR</a>
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-lg-12">
                        <form class="user" method="post">
                            <div class="form-group">
                                Você confirma a exclusão do professor <b>@ViewBag.Professor.Nome</b>?
                            </div>
                            <div class="form-group text-center">
                                <a id="confirmar" class="btn btn-success btn-sm" href="@Url.Action("Delete", "Professor", new { Id = ViewBag.Professor.IdProfessor, Delete = true })">CONFIRMAR</a>
                                <a id="cancelar" class="btn btn-danger btn-sm" href="@Url.Action("Index", "Professor")">CANCELAR</a>
                            </div>
                        </form>
                    </div>
                </div>
            }
        }
    </div>
</div>

