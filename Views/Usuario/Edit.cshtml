@model SistemaMatricula.Models.RegisterViewModel
@{ViewBag.Title = "Cadastro de Cursos";}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h6>
    </div>
    <div class="card-body">
        @{
            if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Message
                </div>

                if (ViewBag.HideScreen)
                {
                    <div class="text-center">
                        <a class="btn btn-primary btn-sm" href="@Url.Action("Index", "Usuario")">VOLTAR</a>
                    </div>
                }
            }

            if (!ViewBag.HideScreen)
            {
                <div class="row">
                    <div class="col-lg-12">
                        @using (Html.BeginForm("Edit", "Usuario", FormMethod.Post, new { @class = "user" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                @Html.ValidationSummary()
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control form-control-user", @required = "required", @placeholder = "Digite o e-mail", @maxlenth = 100, @type = "email" })
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    @Html.PasswordFor(model => model.Password, new { @class = "form-control form-control-user", @required = "required", @placeholder = "Digite a senha" })
                                    @Html.ValidationMessageFor(model => model.Password)
                                </div>
                                <div class="col-sm-6">
                                    @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control form-control-user", @required = "required", @placeholder = "Confirme a senha" })
                                    @Html.ValidationMessageFor(model => model.ConfirmPassword)
                                </div>
                            </div>
                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-primary btn-success btn-sm"><i class="fas fa-save"></i> SALVAR</button>
                                <a class="btn btn-danger btn-sm" href="@Url.Action("Index", "Usuario")">CANCELAR</a>
                            </div>
                        }
                    </div>
                </div>
            }
        }
    </div>
</div>
