<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Estudo: Sistema de Matrículas">
    <meta name="author" content="Mario Madureira">
    <title>@ViewBag.Title - Clasoft</title>
    @Styles.Render("~/bundles/css")
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <link rel="icon" href="/Content/img/icon.png" />
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        @Html.Partial("_Sidebar")

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <ul class="navbar-nav text-xs text-center" style="width:120px;margin-left:auto;">
                        <!-- Nav Item - User Information -->
                        <li class="nav-item">
                            <img class="img-fluid" src="/Content/img/logo.png" />
                        </li>
                        <li><small>v1.1.0</small></li>
                    </ul>

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">

                        <!-- Nav Item - User Information -->
                        <li class="nav-item">
                            <a class="nav-link"
                               href="@Url.Action("Edit", "User", new { Id = Cache["IdUser"] })">
                                <i class="fas fa-unlock-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small">Alterar senha</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            @using (Html.BeginForm("LogOff", "User", FormMethod.Post, new { id = "logoutForm" }))
                            {
                                @Html.AntiForgeryToken()
                                <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    <span class="mr-2 d-none d-lg-inline text-gray-600 small">Sair</span>
                                </a>
                            }
                        </li>

                    </ul>

                </nav>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    @RenderBody()
                </div>
                <!-- End of Main Content -->

            </div>
        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    @Scripts.Render("~/bundles/scripts")

</body>

</html>