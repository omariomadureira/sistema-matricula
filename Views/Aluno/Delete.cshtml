@model SistemaMatricula.Models.Aluno
@{ViewBag.Title = "Cadastro de Alunos";}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h6>
    </div>
    <div class="card-body">
        @{
            if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Message
                </div>
                <div class="text-center">
                    <a class="btn btn-primary btn-sm" href="@Url.Action("Index", "Aluno")">VOLTAR</a>
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-lg-12">
                        @using (Html.BeginForm("Delete", "Aluno"))
                        {
                            <div class="form-group">
                                Você confirma a exclusão do aluno <b>@Model.Nome</b>?
                            </div>
                            <div class="form-group text-center">
                                <a class="btn btn-success btn-sm" href="@Url.Action("Delete", "Aluno", new { IdAluno = Model.IdAluno, Delete = true })">CONFIRMAR</a>
                                <a class="btn btn-danger btn-sm" href="@Url.Action("Index", "Aluno")">CANCELAR</a>
                            </div>
                        }
                    </div>
                </div>
            }
        }
    </div>
</div>