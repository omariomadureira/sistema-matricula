@model SistemaMatricula.Controllers.SemestreView
@{ViewBag.Title = "Cadastro de Semestres";}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h6>
    </div>
    <div class="card-body">
        @{
            if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Message
                </div>

                if (ViewBag.HideScreen)
                {
                    <div class="text-center">
                        <a id="voltar" class="btn btn-primary btn-sm" href="@Url.Action("Index", "Semestre")">VOLTAR</a>
                    </div>
                }
            }

            if (!ViewBag.HideScreen)
            {
                <div class="row">
                    <div class="col-lg-12">
                        @using (Html.BeginForm("Update", "Semestre", FormMethod.Post, new { @class = "user" }))
                        {
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    @Html.DropDownListFor(model => model.PeriodoSelecionado, Model.slPeriodos, "Selecione um período", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.PeriodoSelecionado)
                                </div>
                                <div class="col-sm-6">
                                    @Html.TextBoxFor(model => model.InicioData, new { @class = "form-control form-control-user nascimento", @required = "required", @placeholder = "Digite a data de início" })
                                    @Html.ValidationMessageFor(model => model.InicioData)
                                </div>
                            </div>
                            if (Model != null)
                            {
                                @Html.HiddenFor(model => model.IdSemestre)
                            }
                            <div class="form-group text-center">
                                <button type="submit" id="salvar" class="btn btn-primary btn-success btn-sm"><i class="fas fa-save"></i> SALVAR</button>
                                <a id="cancelar" class="btn btn-danger btn-sm" href="@Url.Action("Index", "Semestre")">CANCELAR</a>
                            </div>
                        }
                    </div>
                </div>
            }
        }
    </div>
</div>