@model SistemaMatricula.Models.DisciplinaSemestre
@{ViewBag.Title = "Grade de Semestres";}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h6>
    </div>
    <div class="card-body">
        @{
            if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Message
                </div>
                <div class="text-center">
                    <a id="voltar" class="btn btn-primary btn-sm" href="@Url.Action("Index", "Grade")">VOLTAR</a>
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-lg-12">
                        <form class="user" method="post">
                            <div class="form-group">
                                Você confirma a exclusão da disciplina <b>@Model.Disciplina.Nome</b> na grade?
                            </div>
                            <div class="form-group text-center">
                                <a id="confirmar" class="btn btn-success btn-sm" href="@Url.Action("Delete", "Grade", new { IdDisciplinaSemestre = Model.IdDisciplinaSemestre, Delete = true })">CONFIRMAR</a>
                                <a id="cancelar" class="btn btn-danger btn-sm" href="@Url.Action("List", "Grade", new { CursoSelecionado = Model.Disciplina.Curso.IdCurso, SemestreSelecionado = Model.Semestre.IdSemestre })">CANCELAR</a>
                            </div>
                        </form>
                    </div>
                </div>
            }
        }
    </div>
</div>

