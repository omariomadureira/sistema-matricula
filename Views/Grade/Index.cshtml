@model SistemaMatricula.Controllers.GradeIndexView
@{ViewBag.Title = "Grade de Semestres";}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h6>
    </div>
    <div class="card-body">
        @{
            if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Message
                </div>
            }
            else
            {
                using (Html.BeginForm("Index", "Grade"))
                {
                    <div class="card card-body">
                        <div class="row mb-2">
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.PalavraChave, new { @class = "form-control form-control-user", @placeholder = "O que você está procurando?" })
                                @Html.ValidationMessageFor(model => model.PalavraChave)
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-4">
                                @Html.DropDownListFor(model => model.SemestreSelecionado, Model.slSemestres, "Selecione um semestre", new { @class = "form-control form-control-user" })
                            </div>
                            <div class="col-md-4">
                                @Html.DropDownListFor(model => model.CursoSelecionado, Model.slCursos, "Selecione um curso", new { @class = "form-control form-control-user" })
                            </div>
                            <div class="col-md-4">
                                @Html.DropDownListFor(model => model.StatusGradeSelecionado, Model.slStatusGrade, "Selecione um status", new { @class = "form-control form-control-user" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <button id="pesquisar" type="submit" class="btn btn-primary btn-user btn-sm"><i class="fas fa-search"></i> PESQUISAR</button>
                                <a id="limpar" class="btn btn-primary btn-user btn-sm" href="@Url.Action("Index", "Grade")">LIMPAR FILTRO</a>
                            </div>
                            <div class="col-md-8"></div>
                        </div>
                    </div>
                }
                <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Semestre</th>
                                <th>Curso</th>
                                <th>Status</th>
                                <th colspan="2">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.Grades)
                            {
                                <tr>
                                    <td>@item.NomeSemestre</td>
                                    <td>@item.NomeCurso</td>
                                    <td>@item.StatusGrade</td>
                                    <td class="text-center"><a class="btn btn-primary btn-sm editar" href="@Url.Action("List", "Grade", new SistemaMatricula.Controllers.GradeIndexView { SemestreSelecionado =  item.IdSemestre, CursoSelecionado = item.IdCurso })"><i class="fas fa-search"></i> VER</a></td>
                                    <td class="text-center">
                                        @if (item.StatusGrade != "ENCERRADO" && item.StatusGrade != "ERRO")
                                        {
                                            <a class="btn btn-warning btn-sm editar" href="@Url.Action("EditAll", "Grade", new SistemaMatricula.Controllers.GradeEditAllView { IdSemestre = item.IdSemestre, IdCurso = item.IdCurso })"><i class="fas fa-pen"></i> EDITAR</a>
                                        }
                                    </td>
                                </tr>
                            }
                            @if (ViewBag.Grades.Count <= 0)
                            {
                                <tr>
                                    <td colspan="6">Não há registros para listar.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        }
    </div>
